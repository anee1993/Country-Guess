<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="countryguess.com.countryguess.GameSelectionActivity"
    android:background="@color/pure_white">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="@dimen/text_width"
        android:layout_height="@dimen/text_width"
        android:src="@drawable/globe_gif"
        android:layout_centerHorizontal="true"
        android:id="@+id/globe" />

    <ImageView
        android:layout_width="@dimen/text_width"
        android:layout_height="wrap_content"
        android:id="@+id/simple_game"
        android:src="@drawable/simplegame"
        android:layout_above="@+id/time_bound"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/text_width"
        android:layout_height="wrap_content"
        android:id="@+id/time_bound"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/timebound" />
</RelativeLayout>
